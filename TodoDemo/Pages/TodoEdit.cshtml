@page "{todoId:int}"
@model TodoDemo.Pages.TodoEdit

<form method="post">
    <input type="hidden" asp-for="Edit.TodoId">
    Description: <input asp-for="Edit.Description"><br>
    Done: <input asp-for="Edit.Done"><br>
    <button type="submit" class="btn btn-primary">Update</button>
    <button type="button" class="btn btn-danger" onclick="history.back()">Cancel</button>
</form>

