@page
@model TodoDemo.Pages.Category.Index

<a asp-page="@nameof(EditOrCreate)" class="btn btn-primary">Create Category</a>

@if (!Model.Categories.Any())
{
    <h1>No Categories available</h1>    
} 
else 
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
        <tr>
            <th scope="col">Naam</th>   
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var category in Model.Categories)
        {
            <tr>
                <td>@category.Name</td>
                <td>
                    <a asp-page="@nameof(EditOrCreate)" asp-route-categoryId="@category.CategoryId" class="btn btn-primary">Edit</a>
                    <a asp-page="@nameof(Delete)" asp-route-categoryId="@category.CategoryId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}