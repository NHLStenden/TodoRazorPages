@page "{todoId:int?}"
@model TodoDemo.Pages.TodoCreateOrEdit

<form method="post">
    @if (Model.Mode == TodoCreateOrEdit.EditOrCreateMode.Edit)
    {
        <input type="hidden" asp-for="Todo.TodoId">    
    }
    

    <div class="form-group">
        <label asp-for="Todo.Description"></label>
        <input asp-for="Todo.Description" class="form-control">
        <span asp-validation-for="Todo.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Todo.CategoryId"></label>
        <select class="form-control" asp-for="Todo.CategoryId" asp-items="Model.Categories">
            <option value="">Select a Category</option>
        </select>
        <span asp-validation-for="Todo.CategoryId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Todo.AssignedUserIds"></label>
        <select class="form-control" asp-for="Todo.AssignedUserIds" asp-items="Model.Users"></select>
    </div>

    <div class="form-check">
        <input class="form-check-input" asp-for="Todo.Done">
        <label class="form-check-label" asp-for="Todo.Done"></label>
    </div>

    @if (Model.Mode == TodoCreateOrEdit.EditOrCreateMode.Edit)
    {
        <button type="submit" class="btn btn-primary" asp-page-handler="update">Update</button>    
    }
    else
    {
        <button type="submit" class="btn btn-primary" asp-page-handler="create">Create</button>   
    }
    
    <button type="button" class="btn btn-danger" onclick="history.back()">Cancel</button>
</form>

